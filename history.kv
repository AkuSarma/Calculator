#:kivy 2.0.0

<RV>:
    viewclass: 'Label'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'


<History>:
	name: "history"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		GridLayout:
			size_hint: (1, .1)
			cols: 3

			Button:
				size_hint: (.2, 1)
                font_size: 32
				text: "H"
                disabled: True
				on_press:
					root.manager.current = "history"

			Button:
				font_size: 32
				text: "calculator"
				on_press:
					root.manager.transition.direction = 'left'
					root.manager.current = "normalcalculator"

			Button:
				font_size: 32
				text: "converter"
				on_press:
					root.manager.transition.direction = 'right'
					root.manager.current = "unitconverter"
		
		RV:

