#:kivy 2.0.0
<UnitConverter>:
	name: "unitconverter"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
		
		GridLayout:
			size_hint: (1, .1)
			cols: 3

			Button:
				size_hint: (.2, 1)
				font_size: 32
				text: "H"
				on_press:
					root.manager.current = "history"

			Button:
				font_size: 32
				text: "calculator"
				on_press:
					root.manager.current = "normalcalculator"

			Button:
				font_size: 32
				text: "converter"
				disabled: True
				on_press:
					root.manager.current = "unitconverter"

		TabbedPanel:
			do_default_tab: False

			TabbedPanelItem:
				text: "Weight"

				GridLayout:
					cols: 1

					TextInput:
						id: weightInput
						font_size: 50
						size_hint: (1, .30)


					GridLayout:
						cols: 4
						size_hint: (1, .40)

						Button:
							text: "from kg"
							on_press:
								root.addUnit("kg", "weight")

						Button:
							text: "from gram"
							on_press:
								root.addUnit("g", "weight")

						Button:
							text: "from pounds"
							on_press:
								root.addUnit("lbs", "weight")

						Button:
							text: "from ounces"
							on_press:
								root.addUnit("oz", "weight")

						Button:
							text: "to kg"
							on_press:
								root.weightConvert("kg")

						Button:
							text: "to gram"
							on_press:
								root.weightConvert("g")

						Button:
							text: "to pounds"
							on_press:
								root.weightConvert("lbs")

						Button:
							text: "to ounces"
							on_press:
								root.weightConvert("oz")

					Label:
						id: weightAnswer
						text: ""

			TabbedPanelItem:
				text: "Length"
				
				GridLayout:
					cols: 1

					TextInput:
						id: lengthInput
						font_size: 50
						size_hint: (1, .30)


					GridLayout:
						cols: 4
						size_hint: (1, .40)

						Button:
							text: "from meter"
							on_press:
								root.addUnit("m", "length")

						Button:
							text: "from kilometer"
							on_press:
								root.addUnit("km", "length")

						Button:
							text: "from miles"
							on_press:
								root.addUnit("mi", "length")

						Button:
							text: "from yard"
							on_press:
								root.addUnit("yd", "length")

						Button:
							text: "to meter"
							on_press:
								root.lengthConvert("m")

						Button:
							text: "to kilometer"
							on_press:
								root.lengthConvert("km")

						Button:
							text: "to miles"
							on_press:
								root.lengthConvert("mi")

						Button:
							text: "to yard"
							on_press:
								root.lengthConvert("yd")

					Label:
						id: lengthAnswer
						text: ""

			TabbedPanelItem:
				text: "Time"

				GridLayout:
					cols: 1

					TextInput:
						id: timeInput
						font_size: 50
						size_hint: (1, .30)


					GridLayout:
						cols: 4
						size_hint: (1, .40)

						Button:
							text: "from second"
							on_press:
								root.addUnit("s", "time")

						Button:
							text: "from minute"
							on_press:
								root.addUnit("m", "time")

						Button:
							text: "milisecond"
							on_press:
								root.addUnit("ms", "time")

						Button:
							text: "from hour"
							on_press:
								root.addUnit("h", "time")

						Button:
							text: "to second"
							on_press:
								root.timeConvert("s")

						Button:
							text: "to minute"
							on_press:
								root.timeConvert("m")

						
						Button:
							text: "to milisecond"
							on_press:
								root.timeConvert("ms")

						Button:
							text: "to hour"
							on_press:
								root.timeConvert("h")

					Label:
						id: timeAnswer
						text: ""

			TabbedPanelItem:
				text: "Distance"
				
				GridLayout:
					cols: 1

					TextInput:
						id: distanceInput
						font_size: 50
						size_hint: (1, .30)


					GridLayout:
						cols: 4
						size_hint: (1, .40)

						Button:
							text: "from milimeter"
							on_press:
								root.addUnit("mm", "distance")

						Button:
							text: "from centemeter"
							on_press:
								root.addUnit("cm", "distance")

						Button:
							text: "from meter"
							on_press:
								root.addUnit("m", "distance")

						Button:
							text: "from kilometer"
							on_press:
								root.addUnit("km", "distance")

						Button:
							text: "to milimeter"
							on_press:
								root.distanceConvert("mm")

						Button:
							text: "to centimeter"
							on_press:
								root.distanceConvert("cm")

						
						Button:
							text: "to meter"
							on_press:
								root.distanceConvert("m")

						Button:
							text: "to kilometer"
							on_press:
								root.distanceConvert("km")

					Label:
						id: distanceAnswer
						text: ""

			TabbedPanelItem:
				text: "Data"
	
				GridLayout:
					cols: 1

					TextInput:
						id: dataInput
						font_size: 50
						size_hint: (1, .30)


					GridLayout:
						cols: 4
						size_hint: (1, .40)

						Button:
							text: "from byte"
							on_press:
								root.addUnit("b", "data")

						Button:
							text: "from kilobyte"
							on_press:
								root.addUnit("kb", "data")

						Button:
							text: "from megabyte"
							on_press:
								root.addUnit("mb", "data")

						Button:
							text: "from gigabyte"
							on_press:
								root.addUnit("gb", "data")

						Button:
							text: "to byte"
							on_press:
								root.dataConvert("b")

						Button:
							text: "to kilobyte"
							on_press:
								root.dataConvert("kb")

						
						Button:
							text: "to megabyte"
							on_press:
								root.dataConvert("mb")

						Button:
							text: "to gigabyte"
							on_press:
								root.dataConvert("gb")

					Label:
						id: dataAnswer
						text: ""