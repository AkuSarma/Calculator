#:kivy 2.0.0
<UnitConverter>:
	name: "unitconverter"

	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height
		
		GridLayout:
			size_hint: (1, .1)
			cols: 2

			Button:
				font_size: 32
				text: "Scientific cal"
				on_press:
					root.manager.current = "scientificcalculator"

			Button:
				font_size: 32
				text: "Normal cal"
				on_press:
					root.manager.current = "normalcalculator"

		TabbedPanel:
			do_default_tab: False

			TabbedPanelItem:
				text: "Weight"

				GridLayout:
					cols: 1

					TextInput:
						id: weightInput
						font_size: 50
						size_hint: (1, .30)


					GridLayout:
						cols: 4
						size_hint: (1, .40)

						Button:
							text: "from kg"
							on_press:
								root.weightAddUnit("kg")

						Button:
							text: "from gram"
							on_press:
								root.weightAddUnit("g")

						Button:
							text: "from pounds"
							on_press:
								root.weightAddUnit("lbs")

						Button:
							text: "from ounces"
							on_press:
								root.weightAddUnit("oz")

						Button:
							text: "to kg"
							on_press:
								root.weightConvert("kg")

						Button:
							text: "to gram"
							on_press:
								root.weightConvert("g")

						Button:
							text: "to pounds"
							on_press:
								root.weightConvert("lbs")

						Button:
							text: "to ounces"
							on_press:
								root.weightConvert("oz")

					Label:
						id: weightAnswer
						text: ""

			TabbedPanelItem:
				text: "Length"
				Button:
					text: "Length"

			TabbedPanelItem:
				text: "Time"
				Button:
					text: "Time"

			TabbedPanelItem:
				text: "Distance"
				Button:
					text: "Distance"

			TabbedPanelItem:
				text: "Data"
				Button:
					text: "Data"